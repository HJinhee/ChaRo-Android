<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.charo.MyCharoFragment">

    <TextView
        android:id="@+id/tv_my_charo_board_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11.5dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:lineHeight="22sp"
        android:text="@string/my_charo_board_count"
        android:textAlignment="textStart"
        android:textColor="@color/gray5_sub"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_my_charo_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.5dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:lineHeight="22sp"
        android:text="@string/my_charo_filter_hot"
        android:textAlignment="textStart"
        android:textColor="@color/gray5_sub"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_my_charo_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_down_42_px"
        app:layout_constraintBottom_toBottomOf="@id/tv_my_charo_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_my_charo_filter" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_my_charo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="9.5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_charo_filter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />



</androidx.constraintlayout.widget.ConstraintLayout>