<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="33dp">

    <ImageView
        android:id="@+id/img_drive_course_box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ui_view_selectbox_show_android"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_drive_course_city1"
        tools:text="CITY"
        app:layout_constraintStart_toStartOf="@id/img_drive_course_box1"
        app:layout_constraintEnd_toEndOf="@id/img_drive_course_box1"
        app:layout_constraintTop_toTopOf="@id/img_drive_course_box1"
        app:layout_constraintBottom_toBottomOf="@id/img_drive_course_box1"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/img_drive_course_box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ui_view_selectbox_show_android"
        app:layout_constraintStart_toEndOf="@id/img_drive_course_box1"
        app:layout_constraintEnd_toStartOf="@id/img_drive_course_box3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_drive_course_city2"
        tools:text="CITY"
        app:layout_constraintStart_toStartOf="@id/img_drive_course_box2"
        app:layout_constraintEnd_toEndOf="@id/img_drive_course_box2"
        app:layout_constraintTop_toTopOf="@id/img_drive_course_box2"
        app:layout_constraintBottom_toBottomOf="@id/img_drive_course_box2"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/img_drive_course_box3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ui_view_selectbox_show_android"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_drive_course_city3"
        tools:text="CITY"
        app:layout_constraintStart_toStartOf="@id/img_drive_course_box3"
        app:layout_constraintEnd_toEndOf="@id/img_drive_course_box3"
        app:layout_constraintTop_toTopOf="@id/img_drive_course_box3"
        app:layout_constraintBottom_toBottomOf="@id/img_drive_course_box3"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>